<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="exjobb.bloodpressuremeasurement.MainPage"
    android:background="@android:color/holo_blue_bright">

    <ImageButton
        android:src="@drawable/menu_video_art"
        android:id="@+id/load_data_button"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="150dp"
        android:layout_height="150dp"></ImageButton>

    <ImageButton
        android:src="@drawable/menu_heart_art"
        android:id="@+id/run_test_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="150dp"
        android:layout_height="150dp"></ImageButton>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/drawSampleButton"
        android:background="@android:color/holo_blue_dark"
        android:src="?android:attr/actionModeFindDrawable"
        android:layout_alignTop="@+id/showGraphButton"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/showGraphButton"
        android:background="@android:color/holo_blue_dark"
        android:src="@mipmap/graph_art"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/load_data_button"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showGraphButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="18dp"
        android:id="@+id/patient_display"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

